<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F1F0F0"
    android:id="@+id/main"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="25sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            />



        <EditText
            android:id="@+id/inputNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#7A7474"
            android:background="@drawable/borde5"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"

            />

        <EditText
            android:id="@+id/inputApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Apellidos"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#7A7474"
            android:background="@drawable/borde5"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"

            />

        <EditText
            android:id="@+id/inputCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#7A7474"
            android:background="@drawable/borde5"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"

            />

        <EditText
            android:id="@+id/inputContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#7A7474"
            android:background="@drawable/borde5"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:drawableEnd="@drawable/vercontra"


            />


        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D0251B"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Crear una cuenta"
            android:textSize="15sp"
            android:onClick="onClickRegistro"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes una cuenta?"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingEnd="10dp"
                android:layout_gravity="center"


                />

            <Button
                android:id="@+id/btnInicioSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#F1F0F0"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:text="Iniciar Sesion"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:padding="1dp"
                android:onClick="onLoginButtonClick"
                />
        </LinearLayout>






    </LinearLayout>

</ScrollView>
