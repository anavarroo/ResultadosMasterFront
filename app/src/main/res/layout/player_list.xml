<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFF"



    >

    <LinearLayout
        android:background="@drawable/borde"
        android:orientation="vertical"
        android:layout_height="450dp"
        android:layout_width="325dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:paddingTop="5dp"


        >

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <!-- Linear layout horizontal para idText y nameText -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_marginBottom="8sp">

                <TextView
                    android:id="@+id/nombreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_thin"
                    android:textColor="#747474"
                    android:gravity="start"

                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/apellidosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_thin"
                    android:textColor="#0C0C0C"
                    android:gravity="start"
                    android:textSize="27sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/numeroText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#D0251B"
                android:gravity="end"
                android:fontFamily="@font/prompt_thin"
                android:textSize="50sp"
               />
        </LinearLayout>


        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0251B"
            android:layout_marginHorizontal="20dp"/>



        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/banderaView"
                android:layout_width="0dp"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />



            <TextView
                android:id="@+id/puntosText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#D0251B"
                android:textSize="20sp"
                android:gravity="end"
                android:padding="3dp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="350dp"
                android:layout_height="370dp"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
